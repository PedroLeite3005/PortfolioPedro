---
import { Image } from "astro:assets";
import avatarImage from "/public/AvatarPedro.png";

interface Props {
  width?: number;
  height?: number;
  alt?: string;
  className?: string;
}

const { width = 32, height = 32, alt = "Pedro Bastos Leite", className = "" } = Astro.props;
---

<Image
  src={avatarImage}
  width={width}
  height={height}
  alt={alt}
  class={className}
  loading="eager"
/>

